<section class="form">
  <header>
    <h1>Edit Project</h1>
  </header>
  <section>
    <%= semantic_form_for @project do |f| %>
      <%= form_error_messages(f) %>
      <%= render :partial => "form", :locals => {:f => f} %>
      <button type="submit">Edit Project</button> <span>or <%= link_to "cancel", projects_path %></span>
    <% end %>
  </section>
</section>